<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.login.LoginPageActivity">

  <ImageView
    android:id="@+id/logoImageView"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginTop="80dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/navify_logo" />

  <EditText
    android:id="@+id/usernameInputText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:ems="10"
    android:hint="username"
    android:textColorHint="#AFAFAF"
    android:inputType="text"
    android:textStyle="bold|italic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

  <EditText
    android:id="@+id/passwordInputText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:ems="10"
    android:hint="password"
    android:textColorHint="#AFAFAF"
    android:inputType="textPassword"
    android:textAllCaps="false"
    android:textStyle="bold|italic"
    app:layout_constraintEnd_toEndOf="@id/usernameInputText"
    app:layout_constraintStart_toStartOf="@id/usernameInputText"
    app:layout_constraintTop_toBottomOf="@+id/usernameInputText" />

  <Button
    android:id="@+id/loginButton"
    android:layout_width="0dp"
    android:layout_height="68dp"
    android:layout_marginTop="100dp"
    android:text="LOGIN"
    android:textColor="#FFFFFF"
    android:textColorHighlight="@color/skyBlue"
    android:textColorLink="#000000"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    android:background="@drawable/rounded_button"
    app:layout_constraintEnd_toEndOf="@id/passwordInputText"
    app:layout_constraintStart_toStartOf="@id/passwordInputText"
    app:layout_constraintTop_toBottomOf="@+id/passwordInputText" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/loginButton">

    <TextView
      android:id="@+id/loginPagetextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textSize="16dp"
      android:text="Don't have an account?" />

    <TextView
      android:id="@+id/registerTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="20dp"
      android:text="REGISTER"
      android:textColor="@color/skyBlue"
      android:textStyle="bold"
      android:textSize="18dp"
      android:clickable="true"
      android:focusable="true" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
